{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["esnext"],
		"outDir": "build",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": true
	},
	"include": ["index.ts"]
}
